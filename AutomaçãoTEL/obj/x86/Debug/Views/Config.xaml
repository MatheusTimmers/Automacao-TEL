<Page x:ConnectionId='1'
    x:Class="AutomaçãoTEL.Views.Config"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="420" Height="650">

    <Grid>
        <Pivot>
            <PivotItem Header="Geral">
                <StackPanel>
                    <Border x:ConnectionId='55' x:Name="Border1" Background="#2E2E2E" Height="101" Margin="0,10,0,0" CornerRadius="20" Width="394">
                        <RelativePanel Margin="10,10,0,0" >
                            <StackPanel x:ConnectionId='64' x:Name="Sp1" RelativePanel.RightOf="LRefLev">
                                <TextBox x:ConnectionId='69' x:Name="TboxRL" Margin="5" PlaceholderText="Nivel de Referecia" Width="150"                                                                                                   />
                                <TextBox x:ConnectionId='70' x:Name="TboxAtt" Margin="5" PlaceholderText="Atenuação" Width="150"                                                                                              />
                            </StackPanel>
                            <TextBlock x:ConnectionId='65' x:Name="LdBm1" Text="dBm" RelativePanel.RightOf ="Sp1" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='66' x:Name="LRefLev" Text="Nivel de Referencia:" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='67' x:Name="LAtt" Text="Atenuação:" Margin="0,12,10,10" RelativePanel.Below="LRefLev"/>
                            <TextBlock x:ConnectionId='68' x:Name="LdBm2" Text="dBm" RelativePanel.RightOf ="Sp1" RelativePanel.Below="LdBm1" Margin="0,12,10,10"/>
                        </RelativePanel>
                    </Border>
                    <Border x:ConnectionId='56' x:Name="Border2" Background="#2E2E2E" Height="115" Margin="0,10,0,0" CornerRadius="20" Width="394">
                        <RelativePanel Margin="10,10,0,0">
                            <CheckBox x:ConnectionId='61' x:Name="CbPrintI" Content="Prints ativos na frequencia Inicial" Width="250"                                                                                                               />
                            <CheckBox x:ConnectionId='62' x:Name="CbPrintC" Content="Prints ativos na frequencia Central" Width="255" RelativePanel.Below="CbPrintI"                                                                                                               />
                            <CheckBox x:ConnectionId='63' x:Name="CbPrintF" Content="Prints ativos na frequencia Final" RelativePanel.Below="CbPrintC" Width="250"                                                                                                               />
                        </RelativePanel>
                    </Border>
                    <Border x:ConnectionId='57' x:Name="Border3" Background="#2E2E2E" Height="115" Margin="0,10,0,0" CornerRadius="20" Width="394">
                        <RelativePanel Margin="10,10,0,0">
                            <CheckBox x:ConnectionId='58' x:Name="CbFreqI" Content="Ativar Frequencia Inicial" Width="250"                                                                                                              />
                            <CheckBox x:ConnectionId='59' x:Name="CbFreqC" Content="Ativar Frequencia Central" Width="255" RelativePanel.Below="CbFreqI"                                                                                                              />
                            <CheckBox x:ConnectionId='60' x:Name="CbFreqF" Content="Ativar Frequencia Final" RelativePanel.Below="CbFreqC" Width="250"                                                                                                               />
                        </RelativePanel>
                    </Border>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Wifi">
                <StackPanel>
                    <ComboBox x:ConnectionId='34' x:Name="ComboBox"
                              DisplayMemberPath="ComboBoxHumanReadableOption"
                              Header="Configuração para tecnologias de largura:"
                                                                    
                                                                                         
                              SelectedValuePath="ComboBoxOption"                                              />
                    <Border x:ConnectionId='35' x:Name="Border4" Background="#2E2E2E" Height="142" Margin="0,10,0,0" CornerRadius="20" Width="394">
                        <RelativePanel Margin="10,10,0,0">
                            <StackPanel x:ConnectionId='45' x:Name="Sp2" RelativePanel.RightOf ="LFreqC">
                                <TextBox x:ConnectionId='52' x:Name="TboxFreqI" Margin="5" PlaceholderText="Frequencia Inicial" Width="150"                                                                                                                />
                                <TextBox x:ConnectionId='53' x:Name="TboxFreqM" Margin="5" PlaceholderText="Frequencia Central" Width="150"                                                                                                                />
                                <TextBox x:ConnectionId='54' x:Name="TboxFreqF" Margin="5" PlaceholderText="Frequencia Final" Width="150"                                                                                                                />
                            </StackPanel>
                            <TextBlock x:ConnectionId='46' x:Name="LMhz1" Text="Mhz" RelativePanel.RightOf ="Sp2" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='47' x:Name="LFreqI" Text="Frequencia Inicial:" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='48' x:Name="LMhz2" Text="Mhz" RelativePanel.RightOf ="Sp2" Margin="0,12,10,10" RelativePanel.Below="LMhz1"/>
                            <TextBlock x:ConnectionId='49' x:Name="LFreqC" Text="Frequencia Central:" Margin="0,12,10,10" RelativePanel.Below="LFreqI"/>
                            <TextBlock x:ConnectionId='50' x:Name="LMhz3" Text="Mhz" RelativePanel.RightOf ="Sp2" RelativePanel.Below="LMhz2" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='51' x:Name="LFreqF" Text="Frequencia Final:" Margin="0,12,10,10" RelativePanel.Below="LFreqC"/>
                        </RelativePanel>
                    </Border>
                    <Border x:ConnectionId='36' x:Name="Border5" Background="#2E2E2E" Height="119" Margin="0,10,0,0" CornerRadius="20" Width="394">
                        <RelativePanel Margin="10,10,0,0">
                            <StackPanel x:ConnectionId='37' x:Name="Sp3" RelativePanel.RightOf ="LFreqEspI" Margin="0,15,0,0">
                                <TextBox x:ConnectionId='43' x:Name="TboxFreqIEsp" Margin="5" PlaceholderText="Frequencia Inicial" Width="150"                                                                                                                   />
                                <TextBox x:ConnectionId='44' x:Name="TboxFreqFEsp" Margin="5" PlaceholderText="Frequencia Final" Width="150"                                                                                                                   />
                            </StackPanel>
                            <TextBlock x:ConnectionId='38' x:Name="TbEsp" Text="Espurios"/>
                            <TextBlock x:ConnectionId='39' x:Name="LFreqEspI" Text="Frequencia Inicial:" Margin="0,28,10,10"/>
                            <TextBlock x:ConnectionId='40' x:Name="LFreqEspF" Text="Frequencia Final:" RelativePanel.Below="LFreqEspI" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='41' x:Name="LMhz4" Text="Mhz" RelativePanel.RightOf ="Sp3" RelativePanel.AlignTopWith="Sp3" Margin="0,28,10,10"/>
                            <TextBlock x:ConnectionId='42' x:Name="LMhz5" Text="Mhz" RelativePanel.RightOf ="Sp3" RelativePanel.Below="LMhz4" Margin="0,12,10,10" />
                        </RelativePanel>
                    </Border>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="BlueTooth">
                <StackPanel>
                    <Border x:ConnectionId='2' x:Name="Border6" Background="#2E2E2E" Height="142" Margin="0,10,0,0" CornerRadius="20" Width="394">
                        <RelativePanel Margin="10,10,0,0">
                            <StackPanel x:ConnectionId='24' x:Name="Sp4" RelativePanel.RightOf ="LFreqIBT">
                                <TextBox x:ConnectionId='31' x:Name="TboxFreqIBT" Margin="5" PlaceholderText="Frequencia Inicial" Width="150"                                                                                                            />
                                <TextBox x:ConnectionId='32' x:Name="TboxFreqMBT" Margin="5" PlaceholderText="Frequencia Central" Width="150"                                                                                                            />
                                <TextBox x:ConnectionId='33' x:Name="TboxFreqFBT" Margin="5" PlaceholderText="Frequencia Final" Width="150"                                                                                                            />
                            </StackPanel>
                            <TextBlock x:ConnectionId='25' x:Name="LMhz6" Text="Mhz" RelativePanel.RightOf ="Sp4" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='26' x:Name="LFreqIBT" Text="Frequencia Inicial:" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='27' x:Name="LMhz7" Text="Mhz" RelativePanel.RightOf ="Sp4" Margin="0,12,10,10" RelativePanel.Below="LMhz6"/>
                            <TextBlock x:ConnectionId='28' x:Name="LFreqMBT" Text="Frequencia Central:" Margin="0,12,10,10" RelativePanel.Below="LFreqIBT"/>
                            <TextBlock x:ConnectionId='29' x:Name="LMhz8" Text="Mhz" RelativePanel.RightOf ="Sp4" RelativePanel.Below="LMhz7" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='30' x:Name="LFreqFBT" Text="Frequencia Final:" Margin="0,12,10,10" RelativePanel.Below="LFreqMBT"/>
                        </RelativePanel>
                    </Border>
                    <Border x:ConnectionId='3' x:Name="Border7" Background="#2E2E2E" Height="119" Margin="0,10,0,0" CornerRadius="20" Width="394">
                        <RelativePanel Margin="10,10,0,0">
                            <StackPanel x:ConnectionId='16' x:Name="Sp5" RelativePanel.RightOf ="LFreqEspIBT" Margin="0,15,0,0">
                                <TextBox x:ConnectionId='22' x:Name="TboxFreqIEspBT" Margin="5" PlaceholderText="Frequencia Inicial" Width="150"                                                                                                               />
                                <TextBox x:ConnectionId='23' x:Name="TboxFreqFEspBT" Margin="5" PlaceholderText="Frequencia Final" Width="150"                                                                                                               />
                            </StackPanel>
                            <TextBlock x:ConnectionId='17' x:Name="TbEspBT" Text="Espurios"/>
                            <TextBlock x:ConnectionId='18' x:Name="LFreqEspIBT" Text="Frequencia Inicial:" Margin="0,25,10,10"/>
                            <TextBlock x:ConnectionId='19' x:Name="LFreqEspFBT" Text="Frequencia Final:" RelativePanel.Below="LFreqEspIBT" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='20' x:Name="LMhz9" Text="Mhz" RelativePanel.RightOf ="Sp5" RelativePanel.AlignTopWith="Sp5" Margin="0,25,10,10"/>
                            <TextBlock x:ConnectionId='21' x:Name="LMhz10" Text="Mhz" RelativePanel.RightOf ="Sp5" RelativePanel.Below="LMhz9" Margin="0,12,10,10"/>
                        </RelativePanel>
                    </Border>
                    <Border x:ConnectionId='4' x:Name="Border8" Background="#2E2E2E" Height="164" Margin="0,10,0,0" CornerRadius="20" Width="394">
                        <RelativePanel Margin="10,10,0,0">
                            <TextBlock x:ConnectionId='5' x:Name="LFreqSalto" Text="Frequencias para ensaio numero de canais de salto"/>
                            <StackPanel x:ConnectionId='6' x:Name="Sp6" RelativePanel.RightOf ="LFreqSaltoI" Margin="0,20,0,0">
                                <TextBox x:ConnectionId='13' x:Name="TboxFreqSaltoI" Margin="5" PlaceholderText="Frequencia Inicial" Width="150"  RelativePanel.Below="TbEsp"                                                                                                               />
                                <TextBox x:ConnectionId='14' x:Name="TboxFreqSaltoM" Margin="5" PlaceholderText="Frequencia Central" Width="150" RelativePanel.Below="TboxFreqSaltoI"                                                                                                               />
                                <TextBox x:ConnectionId='15' x:Name="TboxFreqSaltoF" Margin="5" RelativePanel.Below="TboxFreqSaltoM" PlaceholderText="Frequencia Final" Width="150"                                                                                                               />
                            </StackPanel>
                            <TextBlock x:ConnectionId='7' x:Name="LFreqSaltoI" Text="Frequencia Inicial:" Margin="0,25,10,10"/>
                            <TextBlock x:ConnectionId='8' x:Name="LFreqSaltoC" Text="Frequencia Central:" RelativePanel.Below="LFreqSaltoI" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='9' x:Name="LFreqSaltoF" Text="Frequencia Final:" RelativePanel.Below="LFreqSaltoC" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='10' x:Name="LMhz11" Text="Mhz" RelativePanel.RightOf ="Sp6" RelativePanel.AlignTopWith="Sp6" Margin="0,25,10,10"/>
                            <TextBlock x:ConnectionId='11' x:Name="LMhz12" Text="Mhz" RelativePanel.RightOf ="Sp6" RelativePanel.Below="LMhz11" Margin="0,12,10,10"/>
                            <TextBlock x:ConnectionId='12' x:Name="LMhz13" Text="Mhz" RelativePanel.RightOf ="Sp6" RelativePanel.Below="LMhz12" Margin="0,12,10,10"/>
                        </RelativePanel>
                    </Border>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

